{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declarationMap": true,
		"target": "ES2020",
		"sourceMap": false,
		"outDir": "dist",
		"baseUrl": "./src",
		"rootDir": "src",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"paths": {

		}
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"include": [
		"src/**/*.ts"
	]
}
